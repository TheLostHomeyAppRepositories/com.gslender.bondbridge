          "title": {
            "en": "Low"
          }
        },
        {
          "id": "medium",
          "title": {
            "en": "Medium"
          }
        },
        {
          "id": "high",
          "title": {
            "en": "High"
          }
        }
      ],
      "title": {
        "en": "Fan Speed"
      },
      "getable": true,
      "setable": true,
      "uiComponent": "picker",
      "uiQuickAction": true
    },
    "fan_speed": {
      "type": "number",
      "title": {
        "en": "Fan Speed"
      },
      "min": 0,
      "max": 1,
