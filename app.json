  "author": {
    "name": "Grant Slender",
    "email": "gslender@gmail.com"
  },
  "source": "https://github.com/gslender/com.gslender.bondbridge",
  "bugs": {
    "url": "https://github.com/gslender/com.gslender.bondbridge/issues"
  },
  "api": {
    "checkStatus": {
      "method": "get",
      "path": "/checkStatus"
    }
  },
  "drivers": [
    {
      "name": {
        "en": "Fan"
      },
      "energy": {
        "approximation": {
          "usageOn": 2000,
          "usageOff": 1
        }
      },
      "class": "fan",
      "capabilities": [
        "onoff"
      ],
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/fan/assets/images/small.png",
        "large": "/drivers/fan/assets/images/large.png"
      },
      "pair": [
        {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "id": "fan"
    },
    {
      "name": {
        "en": "Fireplace"
      },
      "class": "heater",
      "capabilities": [
        "fpfan_mode",
        "onoff"
      ],
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/fireplace/assets/images/small.png",
        "large": "/drivers/fireplace/assets/images/large.png"
      },
      "pair": [
        {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "id": "fireplace"
    },
    {
      "name": {
        "en": "Shade"
      },
      "class": "blinds",
      "capabilities": [
        "windowcoverings_state"
      ],
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/shade/assets/images/small.png",
        "large": "/drivers/shade/assets/images/large.png"
      },
      "pair": [
        {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "id": "shade"
    }
